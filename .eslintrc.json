{
  "extends": ["next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": ["*.js", "*.cjs"],
      "extends": ["eslint:recommended"],
      "parserOptions": {
        "sourceType": "commonjs"
      }
    },
    {
      "files": ["tailwind.config.js", "tailwind.config.mjs"],
      "parser": "espree",
      "parserOptions": {
        "ecmaVersion": 2020
      }
    }
  ]
}
